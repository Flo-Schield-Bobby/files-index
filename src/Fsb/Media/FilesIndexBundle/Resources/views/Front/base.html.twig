{% extends 'FsbMediaFilesIndexBundle::base.html.twig' %}

{% block body %}
    <nav class='navbar navbar-index navbar-default navbar-fixed-top' role='navigation'>
        <div class='container'>
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class='nav navbar-nav navbar-left'>
                {% block brand_link %}
                    <a class='navbar-brand navbar-sm-link' href='{{ path('fsb_media_files_index_homepage') }}'><i class='icon icon-user'></i> {{ app.user.username }}</a>
                {% endblock %}
            </div>
            {% block logout_link %}
                <ul class='nav navbar-nav navbar-right'>
                    <li>
                        <a class='navbar-sm-link' href='{{ path('fsb_media_files_index_logout') }}'>
                            <span class='icon icon-power-off'></span><span class='hidden-xs'> DÃ©connexion</span>
                        </a>
                    </li>
                </ul>
            {% endblock %}
            {% block nav_content %}
                <form class='navbar-form navbar-left'>
                    {% spaceless %}
                        <div class='form-group'>
                            <input type='search' name='query' class='form-control' placeholder='Rechercher' v-model='query' />
                        </div>
                        <div class='form-group'>
                            <div class='btn-toolbar'>
                                <div class='btn-group btn-group-jutified'>
                                    <a href='#all' class='btn btn-theme-4 icon icon-file-o' data-filter='file' v-on='click: onFilterClick' v-class='active: type == "file"'></a>
                                    <a href='#image' class='btn btn-theme-4 icon icon-file-picture-o' data-filter='image' v-on='click: onFilterClick' v-class='active: type == "image"'></a>
                                    <a href='#movie' class='btn btn-theme-4 icon icon-file-movie-o' data-filter='movie' v-on='click: onFilterClick' v-class='active: type == "movie"'></a>
                                    <a href='#audio' class='btn btn-theme-4 icon icon-file-audio-o' data-filter='audio' v-on='click: onFilterClick' v-class='active: type == "audio"'></a>
                                    <a href='#archive' class='btn btn-theme-4 icon icon-file-zip-o' data-filter='archive' v-on='click: onFilterClick' v-class='active: type == "archive"'></a>
                                    <a href='#text' class='btn btn-theme-4 icon icon-file-text-o' data-filter='text' v-on='click: onFilterClick' v-class='active: type == "text"'></a>
                                </div>
                            </div>
                        </div>
                    {% endspaceless %}
                </form>
            {% endblock %}
        </div>
    </nav>
    <main id='app-container'>
        <section class='container'>{% block app_container %}{% endblock %}</section>
    </main>
{% endblock %}