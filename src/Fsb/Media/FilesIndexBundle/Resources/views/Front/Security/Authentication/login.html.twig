{% extends 'FsbMediaFilesIndexBundle:Front:base.html.twig' %}

{% block brand_link %}
    <a class='navbar-brand' href='{{ path('fsb_media_files_index_homepage') }}'>FSB - Partage de fichier</a>
{% endblock %}

{% block nav_content %}{% endblock %}

{% block app_container %}
    <h1 id='page-title'>Connexion</h1>
    <p class='text-info'>Entrez vos identifiants pour acc√©der aux fichiers</p>
    {% if error %}
        <div class='alert alert-danger alert-dismissable'>
            <a class='close' href='#' data-dismiss='alert'><span class='icon icon-times'></span></a>
            <p>{{ error.message }}</p>
        </div>
    {% endif %}
    <form action='{{ path('fsb_media_files_index_security_check') }}' method='post'>
        <div class='form-group'>
            <label for='username'>Identifiant</label>
            <input id='username' class='form-control' type='text' name='_username' value='{{ last_username }}' />
        </div>
        <div class='form-group'>
            <label for='password'>Mot de passe</label>
            <input id='password' class='form-control' type='password' name='_password' />
        </div>
        <div class='form-group'>
            <input class='btn btn-material-indigo-500' type='submit' name='submit' value='Connexion' />
        </div>
    </form>
{% endblock %}

{% block logout_link %}{% endblock %}